extends layout

block content
  h1(class="text-4xl font-bold text-center mb-8 text-blue-600") Welcome to Our Restaurant!
  p(class="text-2xl font-bold text-center mb-8 text-blue-600") Discover the best culinary delights with us.

    title Recipes

  body(class="bg-gray-50 p-6")
    h2(class="text-4xl font-bold text-center mb-8 text-blue-600") Random Recipes
    ul(class="space-y-6 grid grid-cols-3 gap-3")
      each recipe in recipes
        li(class="bg-white rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow")
          h2(class="text-2xl font-semibold text-gray-800")= recipe.title
          img(src=recipe.image, alt=recipe.title, class="w-50 h-auto rounded-md mb-4")
          p(class="text-gray-700 mb-4")= recipe.summary
          a(class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 transition-colors" href=recipe.sourceUrl target="_blank") View Recipe
