
extends layout

block content
  h1(class="text-4xl font-bold text-center mb-8 text-green-600") Welcome to Our Restaurant!
  p(class="text-2xl font-bold text-center mb-8 text-green-600") Explore Our Delicious Menu.

  body(class="bg-gray-50 p-6")
    // Burger Menu Items Section
    h2(class="text-4xl font-bold text-center mb-8 text-green-600") Burger Menu Items
    if menuItems && menuItems.menuItems && menuItems.menuItems.length > 0
      ul(class="space-y-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6")
        each item in menuItems.menuItems
          li(class="bg-white rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow")
            h2(class="text-2xl font-semibold text-gray-800 mb-2")= item.title
            img(src=item.image, alt=item.title, class="w-full h-48 object-cover rounded-md mb-4")
            p(class="text-gray-600 mb-2") Restaurant Chain: 
              span(class="font-medium text-gray-800")= item.restaurantChain
    else
      p(class="text-gray-700 text-center") No burger menu items found.

    // Drinks Section
    h2(class="text-4xl font-bold text-center mt-12 mb-8 text-green-600") Non-Alcoholic Drinks
    if drinks && drinks.drinks.length > 0
      ul(class="space-y-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6")
        each drink in drinks.drinks
          li(class="bg-white rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow")
            h2(class="text-2xl font-semibold text-gray-800 mb-2")= drink.strDrink
            img(src=drink.strDrinkThumb, alt=drink.strDrink, class="w-full h-48 object-cover rounded-md mb-4")
    else
      p(class="text-gray-700 text-center") No drinks found.
